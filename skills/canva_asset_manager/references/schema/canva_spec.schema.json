{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "canva_spec",
  "type": "object",
  "required": [
    "version",
    "content_type",
    "metadata",
    "pages"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "content_type": {
      "type": "string",
      "enum": [
        "pitchdeck",
        "instagram_carousel",
        "infographic",
        "presentation",
        "custom"
      ]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "brand": {
          "type": "string"
        },
        "brand_colors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "brand_fonts": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "pages": {
      "type": "array"
    },
    "assumptions": {
      "type": "array"
    }
  }
}